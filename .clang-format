# .clang-format — 100 % работает на clang-format 20.1.3 из Qt (Windows)
Language: Cpp
BasedOnStyle: LLVM
Standard: c++20

IndentWidth: 4
UseTab: Never
ColumnLimit: 120

BreakBeforeBraces: Attach

# Скобки сразу после if/for/while/function
BraceWrapping:
  AfterControlStatement: Never
  AfterFunction: false

# Главное — каждый аргумент с новой строки и выровнен под (
AlignAfterOpenBracket: Align
BinPackArguments: false
BinPackParameters: false
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
PenaltyBreakBeforeFirstCallParameter: 1000   # 100 % всегда перенос вниз

# Пробелы (только те, что реально есть в версии 20)
SpacesInParentheses: false
SpacesInSquareBrackets: false
SpaceInEmptyParentheses: false

# Указатели слева: int* p
PointerAlignment: Left

# Остальное
SpaceBeforeAssignmentOperators: true
IndentCaseLabels: true
ReflowComments: true
SortIncludes: false
KeepEmptyLinesAtTheStartOfBlocks: false

AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
AllowShortFunctionsOnASingleLine: None